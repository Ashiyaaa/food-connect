<% include ./partials/header.ejs %>

<div class="header">
    <h4>Reviews</h4>
    <!-- <button id="backButton" onclick="goBack()">back</button> -->
</div>

<div class="container">
    <div class="scroll-area">
        <!-- <h4 style="text-align: center;">No reviews</h4> -->
            
      

      
        <!-- <p>Service Review</p> -->
        <form id="reviewForm" action="/submit-review" method="post">
            <div>
                <p>Rating:</p>
                <input type="number" id="rating" name="rating" min="1" max="5" required>
            </div>
            <div>
                <p>Review:</p>
                <textarea id="reviewText" name="reviewText" rows="4" cols="50" required  class="edit-profile-input-field"></textarea>
            </div>
            <br>
            <div>


                <label for="freshness" class="edit-profile-input-field">Food Freshness:</label>
                <br><br>
                <select id="freshness" name="freshness" class="edit-profile-input-field">
                    <option value="5">Excellent</option>
                    <option value="4">Good</option>
                    <option value="3">Average</option>
                    <option value="2">Below Average</option>
                    <option value="1">Poor</option>
                </select>
                <br><br>
        
                <label for="safety_hygiene" class="edit-profile-input-field">Food Safety and Hygiene:</label>
                <br><br>
                <select id="safety_hygiene" name="safety_hygiene" class="edit-profile-input-field">
                    <option value="5">Excellent</option>
                    <option value="4">Good</option>
                    <option value="3">Average</option>
                    <option value="2">Below Average</option>
                    <option value="1">Poor</option>
                </select>
                <br><br>
        
                <label for="variety" class="edit-profile-input-field">Food Variety:</label>
                <br><br>

                <select id="variety" name="variety" class="edit-profile-input-field">
                    <option value="5">Excellent</option>
                    <option value="4">Good</option>
                    <option value="3">Average</option>
                    <option value="2">Below Average</option>
                    <option value="1">Poor</option>
                </select>
                <br><br>
        
                <label for="taste"class="edit-profile-input-field">Food Taste:</label>
                <br><br>

                <select id="taste" name="taste" class="edit-profile-input-field">
                    <option value="5">Excellent</option>
                    <option value="4">Good</option>
                    <option value="3">Average</option>
                    <option value="2">Below Average</option>
                    <option value="1">Poor</option>
                </select>
                <br><br>
        
                <label for="portion_size" class="edit-profile-input-field">Food Portion Size:</label>
                <br><br>

                <select id="portion_size" name="portion_size" class="edit-profile-input-field">
                    <option value="5">Excellent</option>
                    <option value="4">Good</option>
                    <option value="3">Average</option>
                    <option value="2">Below Average</option>
                    <option value="1">Poor</option>
                </select>
        <br><br>
                <button type="submit" class="submit-btn">Submit Review</button>
                </div>
            </form>
            <br /><br /><br />
    </div>
</div>

